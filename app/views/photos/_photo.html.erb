<div class="col mb-5">
    <div class="card", style="height: 376px;">
        <%= image_tag photo.snap, class: "card-img-top", style: "height: 159px;" %>
        <div class="card-body p-4">
            <div class="text-center">
                <h5 class="fw-bolder"><%= photo.title %></h5>
                <div>
                    <% photo.photo_tags.each do |tag|%>
                        <span>#<%= tag.tag.name %></span>
                    <% end %>
                </div>
                <%=link_to photo.user.nickname, user_path(photo.user.id), style: "text-decoration: none; color: black;" %>
            </div>
        </div>
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><%=link_to "詳細", photo_path(photo.id), class:"btn btn-outline-dark mt-auto" %></div>
        </div>
    </div>
</div>