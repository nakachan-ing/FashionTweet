<div class="col mb-5">
    <div class="card", style="height: 376px;">
        <!-- Product image-->
        <%= image_tag photo.snap, class: "card-img-top", style: "height: 159px;" %>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= photo.title %></h5>
                <!-- Product price-->
                <%= photo.user.nickname %>
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><%=link_to "詳細", "#", class:"btn btn-outline-dark mt-auto" %></div>
        </div>
    </div>
</div>