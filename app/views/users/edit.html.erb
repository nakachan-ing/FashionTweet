<body class="sb-nav-fixed">
    <%= render 'shared/header' %> 
        <div id="layoutSidenav_content">
            <main>
                <section class="py-5">
                    <div class="pick-up-slide text-center">
                        <h1 class="display-6 text-dark mb-3">マイページ情報を編集する</h1>
                    </div>
                    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                      <div class="border col-7">
                          <div class="row">
                              <div class="col-md">
                                  <%= form_with model: current_user, local: true do |f| %>
                                  <%= render 'shared/error_messages', model: f.object %>
                                      <br>
                                      <div class="form-group">
                                          <%= f.label :nickname, "Nickname 必須" %>
                                          <%= f.text_field :nickname, class: "form-control" %>
                                      </div>
                                      <br>
                                      <!--<div class="form-group">
                                          <%= f.label :password, "password 必須" %>
                                          <%= f.password_field :password, class: "form-control" %>
                                      </div>
                                      <br>
                                      <div class="form-group">
                                          <%= f.label :password_confirmation, "password_confirmation 必須" %>
                                          <%= f.password_field :password_confirmation, class: "form-control" %>
                                      </div>
                                      <br>-->
                                      <div class="form-group">
                                          <%= f.label :email, "Email 必須" %>
                                          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
                                      </div>
                                      <br>
                                      <div class="form-group">
                                          <%= f.label :profile_image, "プロフィール画像" %>
                                          <%= f.file_field :profile_image, accept: "image/jpeg, image/png" %>
                                      </div>
                                      <br>
                                      <div class="form-group">
                                          <%= f.label :introduction, "自己紹介" %>
                                          <%= f.text_area :introduction, class: "form-control", rows: "3" %>
                                      </div>
                              </div>
                          </div>
                          <br>
                          <div class="row center-block text-center">
                              <div class="col-1">
                              </div>
                              <div class="col-5">
                                  <%=link_to "戻る", user_path(current_user.id), class:"btn btn-outline-secondary btn-block" %>
                              </div>
                              <div class="col-5">
                                  <%= f.submit "更新する", class:"btn btn-outline-primary btn-block" %>
                              </div>
                          </div>
                          <% end %>
                          <br>
                      </div>
                    </div>
                </section>
            </main>
            <%= render 'shared/footer' %> 
        </div>
    </div>
</body>