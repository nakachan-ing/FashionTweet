


<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Login</h1>
                                    </div>
                                    <%= form_with model: @user, url: user_session_path, class: 'user', local: true do |f| %>
                                        <div class="form-group">
                                            <%= f.email_field :email, class: "form-control form-control-user", id: "exampleInputEmail",
                                                placeholder: "Enter Email Address..." %>
                                        </div>
                                        <div class="form-group">
                                            <%= f.password_field :password, class: "form-control form-control-user",
                                                id: "exampleInputPassword", placeholder: "Password", autocomplete: "current-password" %>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <%= f.check_box :remember_me, class: "custom-control-input",
                                                    id: "customCheck" %>
                                                <label class="custom-control-label" for="customCheck">Remember
                                                    Me</label>
                                            </div>
                                        </div>
                                        <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
                                        <hr>
                                        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-google btn-user btn-block" do %>
                                          <i class="fab fa-google fa-fw"></i>Login with Google
                                        <% end %>
                                        <%= link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-facebook btn-user btn-block" do %>
                                          <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        <% end %>
                                    <% end %>
                                    <hr>
                                    <div class="text-center">
                                        <%= link_to "Forgot Password?", new_user_registration_path, class: "small" %>
                                    </div>
                                    <div class="text-center">
                                        <%= link_to "Create an Account!", new_user_registration_path, class: "small" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="app/javascript/vendor/jquery/jquery.min.js"></script>
    <script src="app/javascript/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="app/javascript/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="app/javascript/sb-admin-2.min.js"></script>

</body>
